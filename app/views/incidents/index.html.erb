<div class="ma_back">	
	<div class="row">
		<div class="ma_head">
			<h1 class="ma_title">CTJ<br>Madrichim</h1>
		</div>
	</div>
	<div class="row ma_flashalert">
		<%= flash.notice %>
	</div>
	<div class="row">
		<%= link_to "Back To Dashboard", root_url, :class => "button" %>
	</div>
	<table class="row">
		<thead>
			<tr>
				<td>Incidents Involved In</td>
				<td>Reported By</td>
				<td>Teens Involved</td>
				<td>Time Stamp</td>
				<td>Edit</td>
				<td>Delete</td>
			</tr>
		</thead>
		<tbody>
			<% @incidents.each do |fn| %>
			<tr>
				<td><%= link_to fn.id, incident_url(fn.id) %></td>
				<td><%= fn.user.full_name %></td>
				<td><%= fn.part_names %></td>
				<td><%= fn.updated_at %></td>
				<td><%= link_to "Edit", edit_incident_url %></td>
				<td><%= link_to "Delete", incident_url(fn.id), method: :delete %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>