<div class="ma_back">	
	<%= form_for @teen_mid do |f| %>
		<div class="row">
			<span class="large-12 columns ma_open"> Madrich/a Name: <%= @teen.full_name %> </span>
			<hr>
		</div>
		<div class="row">
			<div class="large-6 columns">
				<%= f.label :placement, "Assignment" %>
				<%= f.select :placement, options_for_select([
					["Kindergarten"],
					["First Grade"],
					["Second Grade"],
					["Third Grade"],
					["Fourth Grade"],
					["Fifth Grade"],
					["Cooking"],
					["Sports"],
					["Art"],
					["Drama"],
					["Music"],
					["Office"]]) %>
			</div>
		</div>
		<div class="row">
			<div class="large-6 columns">
				<span>
					Please rank yourself in the following areas:
				</span>
				<%= f.label :aid, "Overall Classroom Aid:" %>
				<%= f.select :aid, options_for_select([
					["Poor"],
					["Insufficient"],
					["Adequate"],
					["Excellent"]]) %>
				<%= f.label :initiative, "Taking Inititive:" %>
				<%= f.select :initiative, options_for_select([
					["Poor"],
					["Insufficient"],
					["Adequate"],
					["Excellent"]]) %>
				<%= f.label :behave, "Helping Manage Classroom Behavior:" %>
				<%= f.select :behave, options_for_select([
					["Poor"],
					["Insufficient"],
					["Adequate"],
					["Excellent"]]) %>
				<%= f.label :reliable, "Reliability:" %>
				<%= f.select :reliable, options_for_select([
					["Poor"],
					["Insufficient"],
					["Adequate"],
					["Excellent"]]) %>
				<%= f.label :srelation, "Relationship with Students:" %>
				<%= f.select :srelation, options_for_select([
					["Poor"],
					["Insufficient"],
					["Adequate"],
					["Excellent"]]) %>
			</div>
		</div>
		<div class="row">
			<%= f.label :overall_performance, "Please expand on your overall performance this semester including how you feel about your current placement." %>
			<%= f.text_area :overall_performance %>
		</div>
		<div class="row">
				<%= f.label :other_teens, "Please comment on the performance of any other madrichim." %>
			<%= f.text_area :other_teens %>
		</div>
		<div class="row">
			<%= f.submit "Submit", :class => "button" %>
			<%= link_to "Cancel", root_url, :class => "button" %>
		</div>
	<% end %>
</div>	