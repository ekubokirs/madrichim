<div class="ma_back">	
	<div class="row">
		<div class="ma_head">
			<h1 class="ma_title">CTJ<br>Madrichim</h1>
		</div>
	</div>
	<%= form_for :teen_term, url: {action: "create"} do |f| %>
		<div class="row">
			<h2>Submitting form as: <%= @user.first_name %> <%= @user.last_name %></h2>
		</div>
		<div class="row">
			<%= f.label :leave, "Why are you choosing not to return?" %>
			<%= f.text_field :leave %>
		</div>
		<div class="row">
			<%= f.label :change, "What would you change about this year? For the program? For yourself?" %>
			<%= f.text_area :change %>
		</div>
		<div class="row">
			<%= f.label :same, "What would you keep the same? For the program? For yourself?" %>
			<%= f.text_area :same %>
		</div>
		<div class="row">
			<%= f.label :grow, "What do you think you learned/How do you think you grew this year?" %>
			<%= f.text_area :grow %>
		</div>
		<div class="row">
			<%= f.label :learn, "What do you think you was the most valuable thing you gained from being part of the madrichim program?" %>
			<%= f.text_area :learn %>
		</div>
		<div class="row">
			<%= f.label :life, "How has being a part of the madrichim program impacted you?" %>
			<%= f.text_area :life %>
		</div>
		<div class="row">
			<%= f.submit "Submit", :class => "button" %>
			<%= link_to "Cancel", root_url, :class => "button" %>
		</div>
	<% end %>
</div>