<div class="ma_back">	
	<div class="row">
		<div class="ma_head">
			<h1 class="ma_title">CTJ<br>Madrichim</h1>
		</div>
	</div>
	<%= form_for :teen_end_year, url: {action: "create"} do |f| %>
		<div class="row">
			<span class="large-12 columns ma_open">Submitting form as: <%= @user.full_name %></span>
			<hr>
		</div>
		<div class="row">
			<div class="large-6 columns">
				<%= f.label :school, "School in the Fall" %>
				<%= f.text_field :school %>
			</div>
			<div class="large-6 columns">
				<%= f.label :grade, "Grade in the Fall" %>
				<%= f.select :grade, options_for_select([
					["Seventh Grade"],
					["Eighth Grade"],
					["Freshman"],
					["Sophomore"],
					["Junior"],
					["Senior"]
					])%>
			</div>
		</div>
		<div class="row">
			<div class="large-6 columns">
				<%= f.label :size, "T-Shirt Size" %>
				<%= f.select :size, options_for_select([
				  ["Youth Large"],
				  ["Adult Small"],
				  ["Adult Medium"],
				  ["Adult Large"],
				  ["Adult Extra Large"],
				  ["Adult Extra Extra Large"]]) %>
			</div>
			<div class="large-6 columns">
				<%= f.label :placement, "Assignment" %>
				<%= f.select :placement, options_for_select([
					["Kindergarten"],
					["First Grade"],
					["Second Grade"],
					["Third Grade"],
					["Fourth Grade"],
					["Fifth Grade"],
					["Cooking"],
					["Sports"],
					["Art"],
					["Drama"],
					["Music"],
					["Office"]]) %>
			</div>
		</div>
		<div class="row">
			<%= f.label :change, "What would you change about this year? For the program? For yourself?" %>
			<%= f.text_area :change %>
		</div>
		<div class="row">
			<%= f.label :same, "What would you keep the same? For the program? For yourself?" %>
			<%= f.text_area :same %>
		</div>
		<div class="row">
			<%= f.label :grow, "What do you think you learned/How do you think you grew this year?" %>
			<%= f.text_area :grow %>
		</div>
		<div class="row">
			<%= f.label :days, "Days You Wish To Work" %>
			<div class="large-4 columns">
				<%= check_box_tag("teen_end_year[days][]", "Sunday") %>
				<span class="ma_day">Sunday</span>
			</div>
			<div class="large-4 columns">
				<%= check_box_tag("teen_end_year[days][]", "Tuesday") %>
				<span class="ma_day">Tuesday</span>
			</div>
			<div class="large-4 columns">
				<%= check_box_tag("teen_end_year[days][]", "Wednesday") %>
				<span class="ma_day">Wednesday</span>
			</div>
		</div>
		<div class="row">
			<div class="row">
				<%= f.label :assign, "Request for Assignment" %>
				<div class="large-4 columns">
					<%= check_box_tag("teen_end_year[assign][]", "Classroom") %>
					<span class="ma_assign">Classroom</span>
				</div>
				<div class="large-4 columns">
					<%= check_box_tag("teen_end_year[assign][]", "Chug") %>
					<span class="ma_assign">Chug</span>
				</div>
				<div class="large-4 columns">
					<%= check_box_tag("teen_end_year[assign][]", "Office") %>
					<span class="ma_assign">Office</span>
				</div>
			</div>
			<div class="row">
				<%= f.label :request, "Are there further details that you wish to provide about your request?" %>
				<%= f.text_field :request %>
			</div>
		</div>
		<div class="row">
			<%= f.label :desc, "In one paragraph, please describe yourself for the teacher you will be working with next year." %>
			<%= f.text_area :desc %>
		</div>
		<div class="row">
			<%= f.label :youth, "Would you like to staff youth events?" %>
			<%= f.radio_button(:youth, "Yes") %>
			<span>Yes</span>
			<%= f.radio_button(:youth, "No") %>
			<span>No</span>
		</div>
		<div class="row">
			<%= f.submit "Submit", :class => "button" %>
			<%= link_to "Cancel", root_url, :class => "button" %>
		</div>
	<% end %>
</div>