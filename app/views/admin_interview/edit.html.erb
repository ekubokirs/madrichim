<div class="ma_back">	
	<div class="row">
		<div class="ma_head">
			<h1 class="ma_title">CTJ<br>Madrichim</h1>
		</div>
	</div>
	<div class="row">
		<nav class="top-bar">
			<ul class="title-area">
				<li class="name">
					<h1 class="ma_topbar"><%= @user.full_name %></h1>
				</li>
				<li class="toggle-topbar menu-icon">
					<a href="#">
						<span>Menu</span>
					</a>
				</li>
			</ul>
			<section class="top-bar-section">
				<ul class="right">
					<li class="divider"></li>
					<li><%= link_to "Teacher Contacts", teacher_index_url %></li>
					<li class="divider"></li>
					<li><%= link_to "Edit Users", users_url %></li>
					<li class="divider"></li>
					<li class="has-dropdown">
						<a href="#">Incidents</a>
						<ul class="dropdown">
							<li><%= link_to "New Incident Report", new_incident_url %></li>
							<li><%= link_to "All Incident Reports", incidents_url %></li>
						</ul>
					</li>
					<li class="divider"></li>
					<li class="has-dropdown">
						<a href="#">New Forms</a>
						<ul class="dropdown">
							<li><%= link_to "Interview Form", new_admin_interview_url %></li>
							<li><%= link_to "Mid-Year Form", new_teacher_mid_year_url  %></li>
							<li><%= link_to "End of Year Form", new_teacher_end_year_url %></li>
						</ul>
					</li>
					<li class="divider"></li>
					<li class="has-dropdown">
						<a href="#">Completed Forms</a>
						<ul class="dropdown">
							<li><%= link_to "New Student Applications", teen_new_index_url %></li>
							<li><%= link_to "Admin Interview Forms", admin_interview_index_url %></li>
							<li><%= link_to "Student Mid Year Evaluations", teen_mid_year_index_url %></li>
							<li><%= link_to "Teacher Mid Year Evaluations", teacher_mid_year_index_url %></li>
							<li><%= link_to "Student End of Year and Returning Applications", teen_end_year_index_url %></li>
							<li><%= link_to "Teacher End of Year Evaluations", teacher_end_year_index_url %></li>
							<li><%= link_to "Student Not Returning Evaluation", teen_term_index_url %></li>
						</ul>
					</li>
					<li class="divider"></li>
					<li><%= link_to "Log Out", logout_url %></li>
				</ul>
			</section>
		</nav>
	</div>
	<div class="row ma_greet">
		<%= @teen.full_name %>
	</div>
	<%= form_for @interview, html: {autocomplete:  :off} do |f| %>
		<div class="row">
			<%= f.label :yourself, "Tell us about yourself." %>
			<%= f.text_area :yourself %>
		</div>
		<div class="row">
			<%= f.label :children, "What experience do you have working with children?" %>
			<%= f.text_area :children %>
		</div>
		<div class="row">
			<%= f.label :strength, "What are three of your strengths?" %>
			<%= f.text_area :strength %>
		</div>
		<div class="row">
			<%= f.label :weak, "What are three of your weaknesses?" %>
			<%= f.text_area :weak %>
		</div>
		<div class="row">
			<%= f.label :challenges, "What do you think will challenge you most about this program?" %>
			<%= f.text_area :challenges %>
		</div>
		<div class="row">
			<%= f.label :groups, "What age group do you think you will be most comfortable working with?" %>
			<%= f.text_area :groups %>
		</div>
		<div class="row">
			<%= f.label :talent, "Do you have any other talents such as art or drama?" %>
			<%= f.text_area :talent %>
		</div>
		<div class="row">
			<%= f.label :question, "What would you do if someone asked you a question you didn't know the answer to?" %>
			<%= f.text_area :question %>
		</div>
		<div class="row">
			<%= f.label :crying, "What would you do if you saw a child crying in the parking lot?" %>
			<%= f.text_area :crying %>
		</div>
		<div class="row">
			<%= f.label :tefillah, "What would you do if a child was acting up during Tefillah?" %>
			<%= f.text_area :tefillah %>
		</div>
		<div class="row">
			<%= f.label :madrich, "Is there another Madrich/a that you think sets a good example?" %>
			<%= f.text_area :madrich %>
		</div>
		<div class="row">
			<%= f.label :other, "Is there anything else you think we should know?" %>
			<%= f.text_area :other %>
		</div>
		<div class="row">
			<%= f.submit "Submit", :class => "button" %>
			<%= link_to "Cancel", root_url, :class => "button" %>
		</div>
	<% end %>
</div>	