<div class="row">
	<nav class="top-bar">
		<ul class="title-area">
			<li class="toggle-topbar menu-icon">
				<a href="#">
					<span>Menu</span>
				</a>
			</li>
		</ul>
		<section class="top-bar-section">
			<ul class="left">
				<li class="ma_topbar"><%= @user.full_name %></li>
				<li class="divider"></li>
				<li class="ma_topbar"><%= @user._type %></li>
				<li class="divider"></li>
			</ul>
			<ul class="right">
				<li class="divider"></li>
				<li><%= link_to "Teacher Contacts", teacher_index_url %></li>
				<li class="divider"></li>
				<li><%= link_to "Edit Users", users_url %></li>
				<li class="divider"></li>
				<li>
					<%= link_to "Incident Report", new_incident_url %>
				</li>
				<li class="divider"></li>
				<li>
					<%= link_to "Interview Form", new_admin_interview_url %>
				</li>
				<li class="divider"></li>
				<li class="has-dropdown">
					<a href="#">Forms</a>
					<ul class="dropdown">
						<li>
							<%= link_to "Mid-Year Form", new_teacher_mid_year_url  %>
						</li>
						<li>
							<%= link_to "End of Year Form", new_teacher_end_year_url %>
						</li>
					</ul>
				</li>
				<li class="divider"></li>
				<li>
					<%= link_to "Log Out", logout_url %>
				</li>
			</ul>
		</section>
	</nav>
</div>
<div class="row ma_flashalert">
	<%= flash.notice %>
</div>
<div class="row">
	<div class="large-4 large-offset-4 columns heb ma_greet">
		שלום!
	</div>
</div>
<div class="row">
	<table class="large-12 columns">
		<thead>
			<tr>
				<th>Name</th>
				<th>E-Mail</th>
				<th>Cell Phone</th>
				<th>Home Phone</th>
				<th>Birthday</th>
			</tr>
		</thead>
		<tbody>
			<% @teens.each do |teen| %>
			<tr>
				<td> <%= link_to teen.full_name, teen_url(teen) %> </td>
				<td> <%= teen.email %> </td>
				<td> <%= teen.cell_phone %> </td>
				<td> <%= teen.home_phone %> </td>
				<td> <%= teen.born_on %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>